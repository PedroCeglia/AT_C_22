@page
@model AT_C__2.Pages.TesteModel
@{
    ViewData["Title"] = "Teste";
}

<h1>Testw</h1>


<div class="row">
    <div class="col-md-6">
        <h3>Calcular Total da Reserva</h3>
        <p>Dados mockados: Dias = 5, Preço por Dia = R$100</p>
        <form method="post" asp-page-handler="CalcularTotal">
            <button type="submit" class="btn btn-primary">Executar Cálculo</button>
        </form>
        @if (Model.TotalReserva.HasValue)
        {
            <p><strong>Resultado:</strong> R$ @Model.TotalReserva.Value.ToString("F2")</p>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Aplicar Desconto América do Sul</h3>
        <p>Dados mockados: Pacote com Título = "Pacote Brasil", Preço = R$1000, Destinos = Brasil, Argentina</p>
        <form method="post" asp-page-handler="AplicarDesconto">
            <button type="submit" class="btn btn-primary">Executar Desconto</button>
        </form>
        @if (Model.PrecoComDesconto.HasValue)
        {
            <p><strong>Preço Original:</strong> R$ @Model.Pacote.Preco.ToString("F2")</p>
            <p><strong>Preço com Desconto:</strong> R$ @Model.PrecoComDesconto.Value.ToString("F2")</p>
        }
    </div>
</div>


