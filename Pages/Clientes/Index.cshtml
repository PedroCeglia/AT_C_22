@page
@model AT_C__2.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<p>
    <a asp-page="Create">Criar Novo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>
                    <a asp-page="Update" asp-route-id="@cliente.Id">Editar</a>
                    <a asp-page="Delete" asp-route-id="@cliente.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>